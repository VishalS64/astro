	<!-- ONLY change: global page background image -->
	<style>
		:global(html) {
			min-height: 100%;
		}
		:global(body) {
			min-height: 100vh;
			/* Place bg.png in /public */
			background: #0a0f12 url("/bg.png") no-repeat center top / cover
				fixed;
			/* content remains fully scrollable; background stays put */
		}
