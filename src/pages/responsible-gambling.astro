				list-style: disc;
			}
			.responsible a {
				color: #0ea5e9;
				text-decoration: underline;
				text-underline-offset: 2px;
			}
			.responsible a:hover { text-decoration-thickness: 2px; }
			.responsible a:focus-visible {
				outline: 2px dashed #0ea5e9;
				outline-offset: 2px;
			}
			.hint {
				margin-top: -4px;
				color: #374151;
				font-style: italic;
			}

            .heads{
				margin-top: 1rem;
				font-size: 28px;
			}

			.navlink {
				text-decoration: underline;
				text-underline-offset: 4px; /* "margin-top" for the underline */
			}

			/* Notice / callout */
			.notice {
				margin-top: 18px;
				padding: 12px 14px;
				background: #ecfdf5;
				border: 1px solid #a7f3d0;
				border-radius: 10px;
				text-align: left;
				color: #065f46;
			}

			/* Responsive */
			@media (max-width: 900px) {
				.responsible { font-size: 18px; line-height: 1.55; }
				.responsible h2 { font-size: 22px; }
			}

			/* Print: show URLs and tidy spacing */
			@media print {
				.responsible a[href]::after {
					content: " (" attr(href) ")";
					font-size: 85%;
				}
				.responsible { text-align: left; }
				.notice { background: none; border-color: #000; }
			}
		</style>
	</ContentPanel>
